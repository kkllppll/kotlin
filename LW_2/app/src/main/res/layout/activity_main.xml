<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Розрахунок викидів палива"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Spinner
            android:id="@+id/fuelTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:entries="@array/fuel_types" />

        <EditText
            android:id="@+id/inputHeatCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Нижча теплота згоряння Q (МДж/кг)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/inputL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Частка леткої золи aвин"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/inputAr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Масова частка золи Ar (%)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/inputG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Гвин (%)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/inputn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ефективність золовловлення ηзу"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/inputk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ктв"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/inputB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Витрати палива B (т)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Розрахувати"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Результати будуть тут"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
