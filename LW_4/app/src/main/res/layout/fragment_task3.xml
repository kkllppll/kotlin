<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Розрахунок КЗ для підстанції ХПнЕМ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"/>

        <!-- Вхідні дані -->
        <EditText
            android:id="@+id/inputUkmax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Напруга трансформатора у відсотках (%)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/inputUvn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Номінальна напруга високовольтної частини (кВ)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/inputSnom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Номінальна потужність трансформатора (МВА)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/inputRcn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Активний опір високовольтної частини (Ом)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/inputXcn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Реактивний опір на шинах у нормальному режимі (Ом)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/inputRcmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Активний опір у мінімальному режимі (Ом)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/inputXcmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Реактивний опір на шинах у мінімальному режимі (Ом)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/inputUnn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Номінальна напруга (кВ)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/inputLineLengths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Довжини ділянок через кому (км)"
            android:inputType="text"/>

        <EditText
            android:id="@+id/inputRline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Питомий активний опір (Ом/км)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/inputXline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Питомий реактивний опір (Ом/км)"
            android:inputType="numberDecimal"/>




        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Розрахувати"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Вивід результатів -->
        <TextView
            android:id="@+id/outputResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Результат з'явиться тут"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
